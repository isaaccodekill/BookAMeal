{
  "name": "book_a_meal",
  "version": "1.0.0",
  "description": "An app to book a meal",
  "main": "app.js",
  "scripts": {
    "test": "nyc --require @babel/register mocha --compilers js:@babel/register ./test --exit",
    "start": "node ./dist/app.js",
    "dev": "nodemon --exec babel-node ./API/app.js",
    "clean": "rm -rf ./dist",
    "build-server": "babel ./API -d ./dist --ignore ./node_modules/,./dist",
    "build": "npm run clean && npm run build-server",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaaccodekill/BookAMeal.git"
  },
  "author": "Isaac Bello",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/isaaccodekill/BookAMeal/issues"
  },
  "homepage": "https://github.com/isaaccodekill/BookAMeal#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "pg": "^7.8.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2"
  }
}
