                    },
                    "price": {
                      "type": "number",
                      "description": "Price of new Meal"
                    },
                    "description": {
                        "type": "string",
                        "description": "Say Something about this meal"
                    },
                    "calories": {
                        "type": "string",
                        "description": "Food Calorie content"
                    },
                    "currency": {
                        "type": "string",
                        "description": "Currency accepted"
                    },
                    "image": {
                      "type": "string",
                      "format": "binary",
                      "description": "Food Image"
                    }
                  },
                  "type": "object"
                }
              }
            }
          },
          "produces": [
            "application/json"
          ],
          "responses": {
            "403": {
              "description": "Forbidden"
